FROM maven:3.9-eclipse-temurin AS builder
WORKDIR /build
COPY . .
RUN mvn -pl notification-service -am clean package -DskipTests
RUN echo "=== JAR-files under /build ===" \
 && find /build -type f -name "*.jar" -print \
 || true

FROM openjdk:21-bullseye

COPY --from=builder /build/notification-service/target/notification-service.jar notification-service.jar

EXPOSE 8085
ENTRYPOINT ["java","-jar","/notification-service.jar"]