FROM maven:3.9-eclipse-temurin AS builder
WORKDIR /build
COPY . .
RUN mvn -pl blocker -am clean package -DskipTests
RUN echo "=== JAR-files under /build ===" \
 && find /build -type f -name "*.jar" -print \
 || true

FROM openjdk:21-bullseye

COPY --from=builder /build/blocker/target/blocker.jar blocker.jar

EXPOSE 8080
ENTRYPOINT ["java","-jar","/blocker.jar"]