FROM maven:3.9-eclipse-temurin AS builder
WORKDIR /build
COPY . .
RUN mvn -pl transfer -am clean package -DskipTests
RUN echo "=== JAR-files under /build ===" \
 && find /build -type f -name "*.jar" -print \
 || true

FROM openjdk:21-bullseye

COPY --from=builder /build/transfer/target/transfer.jar transfer.jar

EXPOSE 8097
ENTRYPOINT ["java","-jar","/transfer.jar"]