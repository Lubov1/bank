FROM maven:3.9-eclipse-temurin AS builder
WORKDIR /build
COPY . .
RUN mvn -pl account-service -am clean package -DskipTests
RUN echo "=== JAR-files under /build ===" \
 && find /build -type f -name "*.jar" -print \
 || true

FROM openjdk:21-bullseye

COPY --from=builder /build/account-service/target/account-service.jar account-service.jar

EXPOSE 8082
ENTRYPOINT ["java","-jar","/account-service.jar"]